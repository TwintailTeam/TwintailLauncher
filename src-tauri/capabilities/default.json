{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
    "notification:default",
    {
      "identifier": "opener:allow-reveal-item-in-dir",
      "allow": [
        { "path": "/home/**" },
        { "path":  "/var/home/*/**" },
        { "path": "$APPDATA/**" }
      ]
    }
  ]
}
